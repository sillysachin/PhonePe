<?xml version="1.0" encoding="utf-8"?>
<ripple xmlns:android="http://schemas.android.com/apk/res/android"
        android:color="@color/color_accent">

    <!-- Defines bounds of the ripple -->
    <item android:id="@android:id/mask">
        <shape android:shape="rectangle">
            <solid android:color="@color/color_accent" />
            <!-- ^ This color is ignored by the ripple.
             You can even set black here and it won't be drawn.
             But not specifying a color results in no ripple being drawn.
             Possibly a bug.
            -->
            <corners android:radius="@dimen/card_corner_radius" />
        </shape>
    </item>

</ripple>