<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="@dimen/card_corner_radius"
        app:cardElevation="@dimen/elevation_card"
        android:foreground="@drawable/card_background"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="@dimen/spacing_near_normal"
            >

            <!-- Avatar -->
            <ImageView
                android:id="@+id/avatar"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@drawable/placeholder_avatar"
                android:layout_marginEnd="@dimen/spacing_normal"
                />

            <!-- Display name for this transaction.
             Eg., "{User} has requested", "Electricity bill due {date} -->
            <TextView
                android:id="@+id/transaction_title"
                style="@style/WrapContentStyle"
                android:text="Transaction name"
                android:layout_toEndOf="@+id/avatar"
                />

            <!-- Amount -->
            <TextView
                android:id="@+id/transaction_amount"
                style="@style/WrapContentStyle"
                android:text="â‚¹3,000"
                android:textSize="@dimen/text_size_xxxlarge"
                android:layout_alignStart="@+id/transaction_title"
                android:layout_below="@+id/transaction_title"
                />

            <!-- Action buttons -->
            <!-- Decline -->
            <Button
                android:id="@+id/btn_decline"
                style="@style/Button.Borderless"
                android:text="@string/decline"
                android:layout_toStartOf="@+id/btn_pay"
                android:layout_alignTop="@+id/btn_pay"
                />

            <!-- Pay -->
            <Button
                android:id="@+id/btn_pay"
                style="@style/Button.Primary"
                android:theme="@style/Button.Primary"
                android:text="@string/pay"
                android:layout_alignParentEnd="true"
                android:layout_below="@+id/transaction_amount"
                />

        </RelativeLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>